<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XFAppiumPOC.HomePage"
    Title="Home">
    <ContentPage.Content>

        <StackLayout Padding="10" Orientation="Vertical" Spacing="5">

            <Entry x:Name="Num1" AutomationId="Num1" Keyboard="Numeric" Placeholder="Enter first number"/>
            <Entry x:Name="Num2" AutomationId="Num2" Keyboard="Numeric" Placeholder="Enter second number"/>

            <Label x:Name="ResultTxt" AutomationId="ResultText"/>

            <Button Text="Add" AutomationId="Addition" Clicked="OnAddClicked"/>
            <Button Text="Multiply" AutomationId="Multiplication" Clicked="OnMultiplyClicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>

